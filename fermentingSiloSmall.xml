<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable>
    <storeData>
        <name>$l10n_GlobalCompanyPlaceable_FermentingSilo_shopItem_fermentingSiloSmall</name>
        <functions>
            <function>$l10n_GlobalCompanyPlaceable_FermentingSilo_function_gcFermentingSilo</function>
        </functions>
        <specs>
            <capacity>100000</capacity>
            <fillTypes>chaff grass</fillTypes>
        </specs>
        <image>store_fermentingSiloSmall.dds</image>
        <price>110000</price>
        <lifetime>1000</lifetime>
        <dailyUpkeep>100</dailyUpkeep>
        <rotation>0</rotation>
        <brand>GCPLACEABLE</brand>
        <species>placeable</species>
        <category>globalCompanyPlaceable</category>
        <vertexBufferMemoryUsage>180404</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>32964</indexBufferMemoryUsage>
        <textureMemoryUsage>5680200</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <placeableType>GC_ProductionFactoryPlaceable</placeableType>
    <filename>fermentingSiloSmall.i3d</filename>
    <placement testSizeX="27" testSizeZ="20" sizeX="27" sizeZ="20" useRandomYRotation="false" useManualYRotation="true" />

    <productionFactories>
        <productionFactory indexName="FERMENTERSMALL" saveId="globalCompany_fermenter_small">
            <guiInformation title="GlobalCompanyPlaceable_FermentingSilo_FactoryName" imageFilename="store_fermentingSiloSmall.dds" description="GlobalCompanyPlaceable_FermentingSilo_Description"/>
			
            <operation updateDelayMinutes="10" showInGlobalGUI="true" showInTablet="true" canPurchaseInputs="true"/>
			
            <registerLoadingTriggers>
				<loadingTrigger name="LoadingTrigger" triggerNode="loadingTrigger" fillLitersPerSecond="500" autoStart="false">
					<dischargeInfo dischargeNode="dischargeNode" />
					<sounds fillSoundIdentifier="fillSound01" />
					<effectNode effectNode="pipeEffect" materialType="unloading" materialTypeId="3" fadeTime="0.5" />

					<triggerStatus>
						<fallOffShader node="mapTargetMarker" />
					</triggerStatus>
				</loadingTrigger>
			</registerLoadingTriggers>

            <registerInputProducts headerTitle="GlobalCompanyPlaceable_FermentingSilo_HeaderInput">
                <inputProduct name="IP_CHAFFGRASS" capacity="100000" title="GlobalCompanyPlaceable_FermentingSilo_Input1">
                    <fillTypes>
                        <fillType name="chaff" />
                        <fillType name="grass" />
                    </fillTypes>
                    <inputMethods>
                        <unloadTrigger exactFillRootNode="exactFillRootNode" />
                    </inputMethods>
                </inputProduct>	
            </registerInputProducts>

            <registerOutputProducts headerTitle="GlobalCompanyPlaceable_FermentingSilo_HeaderOutput">				
                <outputProduct name="OP_SILAGE" fillType="silage" capacity="100000" title="GlobalCompanyPlaceable_FermentingSilo_Output1">
                    <outputMethods>
						<loadingTrigger name="LoadingTrigger" />
					</outputMethods>
                </outputProduct>
            </registerOutputProducts>	

            <productLines>
                <productLine autoLineStart="true" outputPerHour="3000">
                    <inputs>
                        <inputProduct name="IP_CHAFFGRASS" />
                    </inputs>
                    <outputs>
                        <outputProduct name="OP_SILAGE" />
                    </outputs>
                    <playerTrigger playerTriggerNode="playerTrigger" drawUI="false"/> 
	            </productLine>
            </productLines>
            			
        
            <i3dMappings>
                <i3dMapping id="exactFillRootNode" node="0|0|0|0|0" />
                
                <i3dMapping id="playerTrigger" node="0|4" />
                <i3dMapping id="loadingTrigger" node="0|1|0|0|0" />
                <i3dMapping id="dischargeNode" node="0|1|0|0|1" />
                <i3dMapping id="pipeEffect" node="0|1|0|0|2|0" />
                <i3dMapping id="mapTargetMarker" node="0|1|0|0|3" />
            </i3dMappings>
        </productionFactory>
    </productionFactories>
    
	
	
    <triggerMarkers>
        <triggerMarker node="5" />
    </triggerMarkers>
	
    <clearAreas>
        <clearArea startNode="3|0" widthNode="3|0|0" heightNode="3|0|1"/>
    </clearAreas>
	
    <leveling requireLeveling="true" maxSmoothDistance="10" maxSlope="75" maxEdgeAngle="30">
        <levelAreas>
            <levelArea startNode="3|0" widthNode="3|0|0" heightNode="3|0|1" groundType="asphalt"/>
        </levelAreas>
    </leveling>

    <tipOcclusionUpdateArea sizeX="25" sizeZ="20" />
